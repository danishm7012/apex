{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "name": "product",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "price": {
      "type": "decimal",
      "required": true,
      "unique": true
    },
    "quantity": {
      "type": "integer",
      "required": true
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "detail": {
      "type": "richtext",
      "required": true
    },
    "type": {
      "via": "products",
      "model": "type"
    },
    "categories": {
      "collection": "category",
      "via": "products",
      "dominant": true
    },
    "sub_categories": {
      "collection": "sub-category",
      "via": "products",
      "dominant": true
    }
  }
